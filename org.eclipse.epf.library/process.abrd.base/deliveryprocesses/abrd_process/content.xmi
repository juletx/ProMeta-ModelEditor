  <org.eclipse.epf.uma:DescriptorDescription xmi:id="-y4Aw5AGHiDwN62DoU72gvw" name="execute_ruleset_functional_test,_6r4dJsVWEd2pfdXgw7I2qQ" guid="-y4Aw5AGHiDwN62DoU72gvw">
